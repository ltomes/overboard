 <!-- MT3 /dev/tty — vintage terminal aesthetic: dark forest green keys, cream legends -->
 <style name="MitoTTY" parent="BaseTheme">
    <item name="android:isLightTheme">false</item>
    <!-- Deep green-black background, evoking old terminal screen glow -->
    <item name="colorKeyboard">#0f1a0f</item>
    <!-- Forest green keys, referencing the Triumph-inspired modifier color -->
    <item name="colorKey">#1e3020</item>
    <item name="colorKeyActivated">#2a3e2c</item>
    <!-- Off-white cream legends, like dye-sublimated PBT on dark green -->
    <item name="colorLabel">#c8cec0</item>
    <!-- CRT phosphor green when activated -->
    <item name="colorLabelActivated">#6ec87a</item>
    <item name="colorLabelLocked">#44b844</item>
    <!-- Muted green-grey for sub-labels -->
    <item name="colorSubLabel">#7a9a7a</item>
    <!-- Thicker border to evoke MT3's high-wall profile depth -->
    <item name="keyBorderWidth">1.5dp</item>
    <item name="keyBorderWidthActivated">0dp</item>
    <item name="keyBorderColorLeft">#1a2c1e</item>
    <item name="keyBorderColorTop">#243428</item>
    <item name="keyBorderColorRight">#141e16</item>
    <item name="keyBorderColorBottom">#0a120a</item>
    <item name="keyBorderRadius">3dp</item>
    <item name="emoji_button_bg">#1e3020</item>
    <item name="emoji_color">#c8cec0</item>
 </style>
