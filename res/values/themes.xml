 <!-- PBTfans X-Ray — clear ABS with white legends; directional borders simulate homing bumps -->
 <style name="PBTfansXRay" parent="BaseTheme">
    <item name="android:isLightTheme">true</item>
    <!-- Cool blue-grey background, like x-ray film -->
    <item name="colorKeyboard">#b8c8d8</item>
    <!-- Lighter blue-grey key faces, simulating the translucent ABS -->
    <item name="colorKey">#d8e4ef</item>
    <item name="colorKeyActivated">#8aa0b8</item>
    <!-- Near-black legends like the white WS1 legends on the clear base appear as dark silhouettes -->
    <item name="colorLabel">#1a2030</item>
    <item name="colorLabelActivated">#003090</item>
    <item name="colorLabelLocked">#0040b0</item>
    <item name="colorSubLabel">#38485a</item>
    <!-- Thick directional borders simulate the tactile raised bumps of physical keycaps;
         bright top/left edges and dark bottom/right edges create the 3-D homing-dot illusion -->
    <item name="keyBorderWidth">2.5dp</item>
    <item name="keyBorderWidthActivated">1dp</item>
    <item name="keyBorderColorLeft">#d4e4f4</item>
    <item name="keyBorderColorTop">#e8f4ff</item>
    <item name="keyBorderColorRight">#8090a4</item>
    <item name="keyBorderColorBottom">#4a6070</item>
    <item name="keyBorderRadius">5dp</item>
    <item name="emoji_button_bg">#d8e4ef</item>
    <item name="emoji_color">#1a2030</item>
 </style>
 <!-- Tai-Hao Miami — white PBT, teal turquoise and coral/salmon, Miami Vice 80s palette -->
 <style name="TaiHaoMiami" parent="BaseTheme">
    <item name="android:isLightTheme">true</item>
    <!-- Off-white keyboard background, matching the white PBT keycap surface -->
    <item name="colorKeyboard">#f0eeee</item>
    <item name="colorKey">#f8f8f8</item>
    <!-- Teal/turquoise activated key, ~#00B5B8 Miami teal -->
    <item name="colorKeyActivated">#18c4c0</item>
    <!-- Coral/salmon primary labels, ~#FF6B6B Miami coral -->
    <item name="colorLabel">#e86060</item>
    <!-- White on teal when a key is pressed -->
    <item name="colorLabelActivated">#ffffff</item>
    <!-- Teal for locked state (caps lock etc.) -->
    <item name="colorLabelLocked">#18c4c0</item>
    <!-- Teal sub-labels to split the Miami duo across the key face -->
